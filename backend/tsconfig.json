{
  "compilerOptions": {
    "target": "ES6",  // Set to ES2020 or higher
    "module": "ESNext",   // Change from "commonjs" to "ESNext" or "ES6"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node"  // Ensures node-style module resolution
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
